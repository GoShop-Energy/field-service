<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project_task_view_form_service" model="ir.ui.view">
            <field name="name">project.task.view.form.service</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//form//notebook//field[@name='description']" position="replace">
                    <field name="description" nolabel='1' type="html" options="{'collaborative': true, 'resizable': false}" placeholder="Task description..."/>
                    <field name="order_line" string="Product" widget="one2many_list"> 
                        <tree>
                            <field name="product_id"/>
                            <field name="name"/>
                            <field name="product_uom_qty"/> 
                        </tree>
                    </field>
                </xpath> 
                <xpath expr="//form//group//field[@name='project_id']" position="before">
                    <field name="id" string="Task id"/> 
                </xpath>
                <xpath expr="//form//group//field[@name='tag_ids']" position="after">
                    <field name="warehouse_id" widget="record_info" string="Warehouse" invisible="1" />
                </xpath>

                <xpath expr="//form//group//field[@name='tag_ids']" position="before">
                    <field name="partner_id" string="Service Location" readonly="1"/> 
                </xpath>

                <xpath expr="//span[@id='start_rating_buttons']" position="before">
                     <button type="object"
                        name="action_view_delivery"
                        class="oe_stat_button"
                        icon="fa-truck"
                        attrs="{'invisible': [('delivery_count', '=', 0)]}" groups="stock.group_stock_user">
                        <field name="delivery_count" widget="statinfo" string="Delivery"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>